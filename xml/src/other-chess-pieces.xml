<game>
    <name>Other chess-type pieces</name>
    <gamebody>
        <dl>
            <dlentry>
                <dt>
                    <piece colour="black" shape="mandarin" />
                    <piece colour="white" shape="mandarin" />
                </dt>
                <dd>
                    Mandarin.
                </dd>
                <dd>
                    <p>
                        Moves to any adjacent square.
                    </p>
                    <grid rows="7" columns="7" size="small">
                        <square x="3" y="3">
                            <arrow x="1" y="1" />
                            <arrow x="1" y="-1" />
                            <arrow x="-1" y="-1" />
                            <arrow x="-1" y="1" />
                            <arrow x="-1" y="0" />
                            <arrow x="1" y="0" />
                            <arrow x="0" y="-1" />
                            <arrow x="0" y="1" />
                            <piece colour="black" shape="mandarin" />
                        </square>
                        <square x="2" y="2"> <highlight value="circle" /> </square>
                        <square x="3" y="2"> <highlight value="circle" /> </square>
                        <square x="4" y="2"> <highlight value="circle" /> </square>
                        <square x="4" y="3"> <highlight value="circle" /> </square>
                        <square x="4" y="4"> <highlight value="circle" /> </square>
                        <square x="3" y="4"> <highlight value="circle" /> </square>
                        <square x="2" y="4"> <highlight value="circle" /> </square>
                        <square x="2" y="3"> <highlight value="circle" /> </square>
                    </grid>
                </dd>
            </dlentry>
            <dlentry>
                <dt>
                    <piece colour="black" shape="super-elephant" />
                    <piece colour="white" shape="super-elephant" />
                </dt>
                <dd>
                    Korean Elephant.
                </dd>
                <dd>
                    <p>
                        Moves 1 square orthogonally, then 2 squares diagonally from its current square.
                    </p>
                    <grid rows="7" columns="7" size="small">
                        <square x="3" y="3">
                            <arrow> <arrow-segment x="1" y="0" /> <arrow-segment x="2" y="2" /> </arrow>
                            <arrow> <arrow-segment x="1" y="0" /> <arrow-segment x="2" y="-2" /> </arrow>
                            <arrow> <arrow-segment x="-1" y="0" /> <arrow-segment x="-2" y="2" /> </arrow>
                            <arrow> <arrow-segment x="-1" y="0" /> <arrow-segment x="-2" y="-2" /> </arrow>
                            <arrow> <arrow-segment x="0" y="1" /> <arrow-segment x="2" y="2" /> </arrow>
                            <arrow> <arrow-segment x="0" y="1" /> <arrow-segment x="-2" y="2" /> </arrow>
                            <arrow> <arrow-segment x="0" y="-1" /> <arrow-segment x="2" y="-2" /> </arrow>
                            <arrow> <arrow-segment x="0" y="-1" /> <arrow-segment x="-2" y="-2" /> </arrow>
                            <piece colour="black" shape="super-elephant" />
                        </square>
                        <square x="1" y="0"> <highlight value="circle" /> </square>
                        <square x="5" y="0"> <highlight value="circle" /> </square>
                        <square x="0" y="1"> <highlight value="circle" /> </square>
                        <square x="6" y="1"> <highlight value="circle" /> </square>
                        <square x="0" y="5"> <highlight value="circle" /> </square>
                        <square x="6" y="5"> <highlight value="circle" /> </square>
                        <square x="1" y="6"> <highlight value="circle" /> </square>
                        <square x="5" y="6"> <highlight value="circle" /> </square>
                    </grid>
                </dd>
            </dlentry>
            <dlentry>
                <dt>
                    <piece colour="black" shape="archbishop" />
                    <piece colour="white" shape="archbishop" />
                </dt>
                <dd>
                    Archbishop.
                </dd>
                <dd>
                    <p>
                        Has the moves of
                        <piece colour="black" shape="bishop" />
                        and
                        <piece colour="black" shape="knight" />
                        combined.
                    </p>
                    <hide>
                    <grid id="knight" rows="7" columns="7" size="small">
                        <square x="3" y="3">
                            <arrow> <arrow-segment x="1" y="0" /> <arrow-segment x="1" y="1" /> </arrow>
                            <arrow> <arrow-segment x="1" y="0" /> <arrow-segment x="1" y="-1" /> </arrow>
                            <arrow> <arrow-segment x="-1" y="0" /> <arrow-segment x="-1" y="1" /> </arrow>
                            <arrow> <arrow-segment x="-1" y="0" /> <arrow-segment x="-1" y="-1" /> </arrow>
                            <arrow> <arrow-segment x="0" y="1" /> <arrow-segment x="1" y="1" /> </arrow>
                            <arrow> <arrow-segment x="0" y="1" /> <arrow-segment x="-1" y="1" /> </arrow>
                            <arrow> <arrow-segment x="0" y="-1" /> <arrow-segment x="1" y="-1" /> </arrow>
                            <arrow> <arrow-segment x="0" y="-1" /> <arrow-segment x="-1" y="-1" /> </arrow>
                        </square>
                        <square x="2" y="1"> <highlight value="circle" /> </square>
                        <square x="4" y="1"> <highlight value="circle" /> </square>
                        <square x="1" y="2"> <highlight value="circle" /> </square>
                        <square x="5" y="2"> <highlight value="circle" /> </square>
                        <square x="1" y="4"> <highlight value="circle" /> </square>
                        <square x="5" y="4"> <highlight value="circle" /> </square>
                        <square x="2" y="5"> <highlight value="circle" /> </square>
                        <square x="4" y="5"> <highlight value="circle" /> </square>
                    </grid>
                    </hide>
                    <grid use="knight">
                        <square x="3" y="3">
                            <arrow x="3.7" y="3.7" />
                            <arrow x="3.7" y="-3.7" />
                            <arrow x="-3.7" y="-3.7" />
                            <arrow x="-3.7" y="3.7" />
                            <piece colour="black" shape="archbishop" />
                        </square>
                        <square x="4" y="4"> <highlight value="circle" /> </square>
                        <square x="5" y="5"> <highlight value="circle" /> </square>
                        <square x="6" y="6"> <highlight value="circle" /> </square>
                        <square x="2" y="2"> <highlight value="circle" /> </square>
                        <square x="1" y="1"> <highlight value="circle" /> </square>
                        <square x="0" y="0"> <highlight value="circle" /> </square>
                        <square x="4" y="2"> <highlight value="circle" /> </square>
                        <square x="5" y="1"> <highlight value="circle" /> </square>
                        <square x="6" y="0"> <highlight value="circle" /> </square>
                        <square x="2" y="4"> <highlight value="circle" /> </square>
                        <square x="1" y="5"> <highlight value="circle" /> </square>
                        <square x="0" y="6"> <highlight value="circle" /> </square>
                    </grid>
                </dd>
            </dlentry>
            <dlentry>
                <dt>
                    <piece colour="black" shape="chancellor" />
                    <piece colour="white" shape="chancellor" />
                </dt>
                <dd>
                    Chancellor.
                </dd>
                <dd>
                    <p>
                        Has the moves of
                        <piece colour="black" shape="rook" />
                        and
                        <piece colour="black" shape="knight" />
                        combined.
                    </p>
                    <grid use="knight">
                        <square x="3" y="3">
                            <arrow x="-3.7" y="0" />
                            <arrow x="3.7" y="0" />
                            <arrow x="0" y="-3.7" />
                            <arrow x="0" y="3.7" />
                            <piece colour="black" shape="chancellor" />
                        </square>
                        <square x="3" y="0"> <highlight value="circle" /> </square>
                        <square x="3" y="1"> <highlight value="circle" /> </square>
                        <square x="3" y="2"> <highlight value="circle" /> </square>
                        <square x="3" y="4"> <highlight value="circle" /> </square>
                        <square x="3" y="5"> <highlight value="circle" /> </square>
                        <square x="3" y="6"> <highlight value="circle" /> </square>
                        <square x="0" y="3"> <highlight value="circle" /> </square>
                        <square x="1" y="3"> <highlight value="circle" /> </square>
                        <square x="2" y="3"> <highlight value="circle" /> </square>
                        <square x="4" y="3"> <highlight value="circle" /> </square>
                        <square x="5" y="3"> <highlight value="circle" /> </square>
                        <square x="6" y="3"> <highlight value="circle" /> </square>
                    </grid>
                </dd>
            </dlentry>
            <dlentry>
                <dt>
                    <piece colour="black" shape="amazon" />
                    <piece colour="white" shape="amazon" />
                </dt>
                <dd>
                    Amazon.
                </dd>
                <dd>
                    <p>
                        Has the moves of
                        <piece colour="black" shape="queen" />
                        and
                        <piece colour="black" shape="knight" />
                        combined.
                    </p>
                    <grid use="knight">
                        <square x="3" y="3">
                            <arrow x="3.7" y="3.7" />
                            <arrow x="3.7" y="-3.7" />
                            <arrow x="-3.7" y="-3.7" />
                            <arrow x="-3.7" y="3.7" />
                            <arrow x="-3.7" y="0" />
                            <arrow x="3.7" y="0" />
                            <arrow x="0" y="-3.7" />
                            <arrow x="0" y="3.7" />
                            <piece colour="black" shape="amazon" />
                        </square>
                        <square x="3" y="0"> <highlight value="circle" /> </square>
                        <square x="3" y="1"> <highlight value="circle" /> </square>
                        <square x="3" y="2"> <highlight value="circle" /> </square>
                        <square x="3" y="4"> <highlight value="circle" /> </square>
                        <square x="3" y="5"> <highlight value="circle" /> </square>
                        <square x="3" y="6"> <highlight value="circle" /> </square>
                        <square x="0" y="3"> <highlight value="circle" /> </square>
                        <square x="1" y="3"> <highlight value="circle" /> </square>
                        <square x="2" y="3"> <highlight value="circle" /> </square>
                        <square x="4" y="3"> <highlight value="circle" /> </square>
                        <square x="5" y="3"> <highlight value="circle" /> </square>
                        <square x="6" y="3"> <highlight value="circle" /> </square>
                        <square x="4" y="4"> <highlight value="circle" /> </square>
                        <square x="5" y="5"> <highlight value="circle" /> </square>
                        <square x="6" y="6"> <highlight value="circle" /> </square>
                        <square x="2" y="2"> <highlight value="circle" /> </square>
                        <square x="1" y="1"> <highlight value="circle" /> </square>
                        <square x="0" y="0"> <highlight value="circle" /> </square>
                        <square x="4" y="2"> <highlight value="circle" /> </square>
                        <square x="5" y="1"> <highlight value="circle" /> </square>
                        <square x="6" y="0"> <highlight value="circle" /> </square>
                        <square x="2" y="4"> <highlight value="circle" /> </square>
                        <square x="1" y="5"> <highlight value="circle" /> </square>
                        <square x="0" y="6"> <highlight value="circle" /> </square>
                    </grid>
                </dd>
            </dlentry>
            <dlentry>
                <dt>
                    <piece colour="black" shape="elephant-queen" />
                    <piece colour="white" shape="elephant-queen" />
                </dt>
                <dd>
                    Elephant queen.
                </dd>
                <dd>
                    <p>
                        ?
                    </p>
                </dd>
            </dlentry>
        </dl>
    </gamebody>
</game>
