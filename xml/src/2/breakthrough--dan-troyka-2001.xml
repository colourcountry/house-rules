<game>
    <name>Breakthrough</name>
    <gamebody>
        <about>
            <author>Dan Troyka</author>
            <date>2001</date>
        </about>
        <players>
            <player value="white" />
            <pieces>
                12 ×
                <piece colour="white" shape="triple-pawn" />
            </pieces>
        </players>
        <players>
            <player value="black" />
            <pieces>
                12 ×
                <piece colour="black" shape="triple-pawn" />
            </pieces>
        </players>
        <phase>
            <phaseName>
                <phaseRef value="Setup" />
            </phaseName>
            <hide>
                <grid id="grid" rows="8" columns="8" size="small"
                      left="edge" right="edge" bottom="black-edge" top="white-edge"/>
            </hide>
            <grid use="grid">
                <square y="1" x="0"> <piece colour="black" shape="triple-pawn" /> </square>
                <square y="1" x="1"> <piece colour="black" shape="triple-pawn" /> </square>
                <square y="1" x="2"> <piece colour="black" shape="triple-pawn" /> </square>
                <square y="1" x="3"> <piece colour="black" shape="triple-pawn" /> </square>
                <square y="1" x="4"> <piece colour="black" shape="triple-pawn" /> </square>
                <square y="1" x="5"> <piece colour="black" shape="triple-pawn" /> </square>
                <square y="1" x="6"> <piece colour="black" shape="triple-pawn" /> </square>
                <square y="1" x="7"> <piece colour="black" shape="triple-pawn" /> </square>
                <square y="0" x="0"> <piece colour="black" shape="triple-pawn" /> </square>
                <square y="0" x="1"> <piece colour="black" shape="triple-pawn" /> </square>
                <square y="0" x="2"> <piece colour="black" shape="triple-pawn" /> </square>
                <square y="0" x="3"> <piece colour="black" shape="triple-pawn" /> </square>
                <square y="0" x="4"> <piece colour="black" shape="triple-pawn" /> </square>
                <square y="0" x="5"> <piece colour="black" shape="triple-pawn" /> </square>
                <square y="0" x="6"> <piece colour="black" shape="triple-pawn" /> </square>
                <square y="0" x="7"> <piece colour="black" shape="triple-pawn" /> </square>

                <square y="6" x="0"> <piece colour="white" shape="triple-pawn" /> </square>
                <square y="6" x="1"> <piece colour="white" shape="triple-pawn" /> </square>
                <square y="6" x="2"> <piece colour="white" shape="triple-pawn" /> </square>
                <square y="6" x="3"> <piece colour="white" shape="triple-pawn" /> </square>
                <square y="6" x="4"> <piece colour="white" shape="triple-pawn" /> </square>
                <square y="6" x="5"> <piece colour="white" shape="triple-pawn" /> </square>
                <square y="6" x="6"> <piece colour="white" shape="triple-pawn" /> </square>
                <square y="6" x="7"> <piece colour="white" shape="triple-pawn" /> </square>
                <square y="7" x="0"> <piece colour="white" shape="triple-pawn" /> </square>
                <square y="7" x="1"> <piece colour="white" shape="triple-pawn" /> </square>
                <square y="7" x="2"> <piece colour="white" shape="triple-pawn" /> </square>
                <square y="7" x="3"> <piece colour="white" shape="triple-pawn" /> </square>
                <square y="7" x="4"> <piece colour="white" shape="triple-pawn" /> </square>
                <square y="7" x="5"> <piece colour="white" shape="triple-pawn" /> </square>
                <square y="7" x="6"> <piece colour="white" shape="triple-pawn" /> </square>
                <square y="7" x="7"> <piece colour="white" shape="triple-pawn" /> </square>
            </grid>
            8 × 8
            <goToPhase>
                <phaseRef value="A" />
            </goToPhase>
        </phase>
        <phase>
            <phaseName>
                <phaseRef value="A" />
                <player value="black" />
                (<player value="white" />)
            </phaseName>
            <p>
                <keyword>move</keyword>
                <i>or</i>
                <keyword>capture</keyword>
            </p>
            <repeat>
                <goToPhase>
                    <phaseRef value="A" />
                    <player value="white" />
                </goToPhase>
                <goToPhase>
                    <phaseRef value="A" />
                    <player value="black" />
                </goToPhase>
            </repeat>
            <subphase>
                A <piece colour="black" shape="triple-pawn" />
                has reached the farthest row of the board
                <goToPhase>
                    <phaseRef value="Win" />
                    <player value="black" />
                </goToPhase>
            </subphase>
        </phase>
        <defs>
        <dl>
            <dlentry>
                <dt><keyword>move</keyword></dt>
                <dd>
                    <p>
                        Move a <piece colour="black" shape="triple-pawn" />
                        to an empty space
                        <space />
                        <grid use="../other-chess-pieces.xml#triple-pawn" scale="0.4"/>
                    </p>
                </dd>
            </dlentry>
            <dlentry>
                <dt><keyword>capture</keyword></dt>
                <dd>
                    <p>
                        Move a <piece colour="black" shape="triple-pawn" />
                        as a
                        <piece colour="black" shape="double-pawn" />
                        to a space occupied by
                        an enemy piece, removing that piece
                    </p>
                        <grid rows="7" columns="7" size="small" scale="0.4">
                            <square x="2" y="2">
                                <highlight value="red-square" />
                                <piece colour="white" shape="double-pawn" />
                            </square>
                            <square x="4" y="2">
                                <highlight value="red-square" />
                                <piece colour="white" shape="double-pawn" />
                            </square>
                            <square x="3" y="3">
                                <piece colour="black" shape="double-pawn" />
                                <arrow x="-1" y="-1" />
                                <arrow x="1" y="-1" />
                            </square>
                        </grid>
                </dd>
            </dlentry>
        </dl>
        </defs>
        <log>
            <status value="in-progress" />
            <sources>
                <source>
                    <url>http://boardgames.about.com/od/free8x8games/a/breakthrough.htm</url>
                    <copyright-holder>Erik Arneson</copyright-holder>
                    <copyright-year>2010</copyright-year>
                </source>
            </sources>
            <changelog>
                <change>
                    <changedate>2010-10-24</changedate>
                    <changetext>First draft, rules complete</changetext>
                </change>
            </changelog>
        </log>
    </gamebody>
</game>
