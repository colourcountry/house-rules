            <phaseName>
                <phaseRef value="A"/>
                <player value="white"/>
            </phaseName>
            Place each piece in a space
            <goToPhase>
                <phaseRef value="B"/>
                <player value="black"/>
            </goToPhase>
            <example>
                <grid id="grid" rows="5" columns="5" size="small" left="edge" right="edge" bottom="edge" top="edge"/>
                    <hide>
                        <grid id="start" use="grid">
