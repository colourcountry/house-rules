        </phase>
        <phase>
            <phaseName>
                <phaseRef value="B"/>
                <player value="black"/>
            </phaseName><ul>
            <li>Do nothing <goToPhase>
                    <phaseRef value="C"/>
                    <player value="white"/>
                </goToPhase>
            </li>
            <li>
                Become
                <player value="white"/>,
                 original <player value="white"/>
                becomes
                <player value="black"/>
                <goToPhase>
                    <phaseRef value="C"/>new
                    <player value="black"/>
                </goToPhase>
            </li>
            <li>
                Let <player value="white"/> decide
                (you will start
                <phaseRef value="C"/>
                first)
                <goToPhase>
                    <phaseRef value="B"/>
                    <player value="white"/>
                </goToPhase>
            </li>
            </ul>
        </phase>
        <subphase>
            <ul><phase>
            <phaseName>
                <phaseRef value="B"/>
                <player value="white"/>
            </phaseName><ul>
            <li>Do nothing <goToPhase>
                    <phaseRef value="C"/>
                    <player value="black"/>
                </goToPhase>
            </li>
            <li>
                Become
                <player value="black"/>,
                 previous <player value="black"/>
                becomes
                <player value="white"/>
                <goToPhase>
                    <phaseRef value="C"/>new
                    <player value="white"/>
                </goToPhase>
            </li>
            
            </ul>
        </phase>
            
            
            </ul>
        </subphase>
        <phase>
            <phaseName>
                <phaseRef value="C"/>
                <player value="black"/> (<player value="white"/>)
            </phaseName>
            <p><keyword>push</keyword> a
                <piece colour="black" shape="rook"/></p><repeat>
                
                <goToPhase>
                    <phaseRef value="C"/>
                    <player value="white"/>
                </goToPhase>
                
                <goToPhase>
                    <phaseRef value="C"/>
                    <player value="black"/>
                </goToPhase>
                </repeat><subphase>
            
                No legal moves
            <goToPhase>
                <phaseRef value="End"/>
            </goToPhase>            
        </subphase>
        </phase><defs><dl>
            <dlentry>
                <dt><keyword>push</keyword></dt>
                <dd><p>Move the
                    <piece colour="black" shape="rook"/>
                    any number of spaces orthogonally
                </p>
            <p>
                If the
                <piece colour="black" shape="rook"/>
                passes through occupied spaces, push the
                pieces in those spaces in the direction the
                <piece colour="white" shape="rook"/>
                is moving, so that they never share a space
            </p>
            <p>
                If a piece on the edge of the board needs to be
                pushed, capture it and score 1 <keyword>victory point</keyword>
            </p>
            <example>
                <player value="black"/>
                <grid use="start">
                    <square x="0" y="0"> <piece colour="white" shape="rook"/> </square>
                    <square x="1" y="0"> <piece colour="black" shape="rook"/> </square>
                    <square x="2" y="0"> <piece colour="white" shape="rook"/> </square>
                    <square x="4" y="0"> <piece colour="black" shape="rook"/> </square>
                    <square x="2" y="3"> <piece colour="white" shape="rook"/> </square>
                    <square x="2" y="4"> <piece colour="white" shape="rook"/> </square>
                    <square x="2" y="1">
                        <arrow x="0" y="3"/>
                        <piece colour="black" shape="rook"/>
                    </square>
                </grid>
                <legal>
                <grid use="start">
                    <square x="0" y="0"> <piece colour="white" shape="rook"/> </square>
                    <square x="1" y="0"> <piece colour="black" shape="rook"/> </square>
                    <square x="2" y="0"> <piece colour="white" shape="rook"/> </square>
                    <square x="4" y="0"> <piece colour="black" shape="rook"/> </square>
                    <square x="2" y="4">
                        <highlight value="circle"/>
                        <piece colour="black" shape="rook"/>
                    </square>
                </grid>
                </legal>
                + 2
                <player value="black"/>
            </example>
            <example>
                <player value="white"/>
                <grid use="start">
                    <square x="1" y="0"> <piece colour="black" shape="rook"/> </square>
                    <square x="2" y="0"> <piece colour="white" shape="rook"/> </square>
                    <square x="4" y="0"> <piece colour="black" shape="rook"/> </square>
                    <square x="0" y="0">
                        <arrow x="2" y="0"/>
                        <piece colour="white" shape="rook"/>
                    </square>
                    <square x="2" y="4">
                        <piece colour="black" shape="rook"/>
                    </square>
                </grid>
                <legal>
                <grid use="start">
                    <square x="2" y="0">
                        <highlight value="circle"/>
                        <piece colour="white" shape="rook"/>
                    </square>
                    <square x="3" y="0"> <piece colour="black" shape="rook"/> </square>
                    <square x="4" y="0"> <piece colour="white" shape="rook"/> </square>
                    <square x="2" y="4">
                        <piece colour="black" shape="rook"/>
                    </square>
                </grid>
                </legal>
                + 1
                <player value="white"/>
            </example>
