<game>
    <name>Line Up</name>
    <gamebody>
        <about>
            <author>Sid Sackson</author>
            <date>1975</date>
        </about>
        <players>
            <player value="white" />
            <pieces>
                2 ×
                <piece colour="white" shape="circle" />,
                2 ×
                <piece colour="white" shape="small-rook" />,
                1 ×
                <piece colour="white" shape="king" />
            </pieces>
        </players>
        <players>
            <player value="black" />
            <pieces>
                2 ×
                <piece colour="black" shape="circle" />,
                2 ×
                <piece colour="black" shape="small-rook" />,
                1 ×
                <piece colour="black" shape="king" />
            </pieces>
        </players>
        <phase>
            <phaseName>
                <phaseNumber value="Setup" />
            </phaseName>
            <grid id="grid" rows="4" columns="4" size="small" scale="1"
                  left="edge" right="edge" bottom="edge" top="edge"/>
            <goToPhase>
                <phaseNumber value="1" />
                <player value="black" />
            </goToPhase>
        </phase>
        <phase>
            <phaseName>
                <phaseNumber value="1" />
            </phaseName>
            <repeat>
            <p>
                <player value="white" />
                <keyword>Use</keyword> <piece colour="white" shape="circle" />
                <goToPhase>
                    <player value="black" />
                </goToPhase>
                <keyword>Use</keyword> <piece colour="black" shape="small-rook" />
                <goToPhase>
                    <player value="white" />
                </goToPhase>
                <keyword>Use</keyword> <piece colour="white" shape="king" />
                <goToPhase/>
            </p>
            <p>
                <player value="black" />
                <keyword>Use</keyword> <piece colour="black" shape="circle" />
                <goToPhase>
                    <player value="white" />
                </goToPhase>
                <keyword>Use</keyword> <piece colour="white" shape="small-rook" />
                <goToPhase>
                    <player value="black" />
                </goToPhase>
                <keyword>Use</keyword> <piece colour="black" shape="king" />
            </p>
            <goToPhase>
                <phaseNumber value="1" />
            </goToPhase>
            </repeat>
        </phase>
        <dl>
            <dlentry>
                <dt><keyword>use</keyword></dt>
                <dd>
                    If there are any unplaced pieces of this type,
                    place one in any unoccupied square.
                </dd>
                <dd>
                    Otherwise, <keyword>move</keyword>
                    any piece of this type
                </dd>
            </dlentry>
            <dlentry>
                <dt><keyword>move</keyword></dt>
                <dd>
                            <piece colour="black" shape="circle" />
                            <piece colour="white" shape="circle" />
                            =
                            <piece colour="black" shape="small-rook" />
                            <piece colour="white" shape="small-rook" />
                            :
                            1 square orthogonally
                </dd>
                <dd>
                            <piece colour="black" shape="king" />
                            <piece colour="white" shape="king" />
                            :
                            1 square in any direction
                </dd>
            </dlentry>
            <dlentry>
                <dt>
                    <keyword>No captures</keyword>
                </dt>
                <dd>
                    No piece may move into an occupied square
                </dd>
            </dlentry>
        </dl>
        <phase>
            <phaseName>
                <phaseNumber value="1" />
            </phaseName>
            Make an orthogonal or diagonal line with 4 of your pieces
            <goToPhase>
                <phaseNumber value="Win" />
            </goToPhase>
            <example>
                <player value="white" /> (<piece colour="white" shape="circle" />)
                <grid use="grid" scale="1">
                    <square x="1" y="0"> <piece colour="black" shape="circle" /> </square>
                    <square x="2" y="0"> <piece colour="white" shape="small-rook" /> </square>
                    <square x="1" y="1">
                        <arrow x="0" y="1" />
                        <piece colour="white" shape="circle" />
                    </square>
                    <square x="2" y="1"> <piece colour="black" shape="king" /> </square>
                    <square x="3" y="1"> <piece colour="black" shape="small-rook" /> </square>
                    <square x="0" y="2"> <piece colour="white" shape="king" /> </square>
                    <square x="2" y="2"> <piece colour="white" shape="circle" /> </square>
                    <square x="3" y="2"> <piece colour="white" shape="small-rook" /> </square>
                    <square x="1" y="3"> <piece colour="black" shape="small-rook" /> </square>
                    <square x="2" y="3"> <piece colour="black" shape="circle" /> </square>
                </grid>
                <goToPhase>
                    <phaseNumber value="Win" />
                    <player value="white" />
                </goToPhase>
            </example>
        </phase>
        <subphase>
            <phaseName>
                <phaseNumber value="1" />
            </phaseName>
            No legal move
            <goToPhase>
                <phaseNumber value="Lose" />
            </goToPhase>
            <example>
                <player value="white" /> (<piece colour="white" shape="circle" />)
                <grid use="grid" scale="1">
                    <square x="2" y="0"> <piece colour="white" shape="small-rook" /> </square>
                    <square x="0" y="1"> <piece colour="black" shape="circle" /> </square>
                    <square x="1" y="1"> <piece colour="black" shape="small-rook" /> </square>
                    <square x="2" y="1">
                        <highlight value="cross" />
                        <piece colour="white" shape="circle" />
                    </square>
                    <square x="3" y="1"> <piece colour="black" shape="small-rook" /> </square>
                    <square x="0" y="2">
                        <highlight value="cross" />
                        <piece colour="white" shape="circle" />
                    </square>
                    <square x="1" y="2"> <piece colour="black" shape="king" /> </square>
                    <square x="2" y="2"> <piece colour="white" shape="small-rook" /> </square>
                    <square x="0" y="3"> <piece colour="white" shape="king" /> </square>
                    <square x="2" y="3"> <piece colour="black" shape="circle" /> </square>
                </grid>
                <goToPhase>
                    <phaseNumber value="Win" />
                    <player value="black" />
                </goToPhase>
            </example>
        </subphase>
    </gamebody>
</game>
