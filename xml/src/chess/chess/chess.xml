<game>
    <name>Chess</name>
    <gamebody>
        <players>
            <player value="black" />
            <pieces>
                king
                <piece colour="black" shape="king" />,
                queen
                <piece colour="black" shape="queen" />,
                2 × bishop
                <piece colour="black" shape="bishop" />,
                2 × knight
                <piece colour="black" shape="knight" />,
                2 × rook
                <piece colour="black" shape="rook" />,
                8 × pawn
                <piece colour="black" shape="pawn" />
            </pieces>
        </players>
        <players>
            <player value="white" />
            <pieces>
                king
                <piece colour="white" shape="king" />,
                queen
                <piece colour="white" shape="queen" />,
                2 × bishop
                <piece colour="white" shape="bishop" />,
                2 × knight
                <piece colour="white" shape="knight" />,
                2 × rook
                <piece colour="white" shape="rook" />,
                8 × pawn
                <piece colour="white" shape="pawn" />
            </pieces>
        </players>
        <phase>
            <phaseName>
                <phaseRef value="Setup" />
            </phaseName>
            <hide>
                <grid id="grid" rows="8" columns="8" size="small"
                      left="edge" right="edge" bottom="black-edge" top="white-edge"/>
            </hide>
            <grid use="grid">
                <square x="0" y="0"> <piece colour="white" shape="rook" /> </square>
                <square x="1" y="0"> <piece colour="white" shape="knight" /> </square>
                <square x="2" y="0"> <piece colour="white" shape="bishop" /> </square>
                <square x="3" y="0"> <piece colour="white" shape="queen" /> </square>
                <square x="4" y="0"> <piece colour="white" shape="king" /> </square>
                <square x="5" y="0"> <piece colour="white" shape="bishop" /> </square>
                <square x="6" y="0"> <piece colour="white" shape="knight" /> </square>
                <square x="7" y="0"> <piece colour="white" shape="rook" /> </square>
                <square x="0" y="1"> <piece colour="white" shape="pawn" /> </square>
                <square x="1" y="1"> <piece colour="white" shape="pawn" /> </square>
                <square x="2" y="1"> <piece colour="white" shape="pawn" /> </square>
                <square x="3" y="1"> <piece colour="white" shape="pawn" /> </square>
                <square x="4" y="1"> <piece colour="white" shape="pawn" /> </square>
                <square x="5" y="1"> <piece colour="white" shape="pawn" /> </square>
                <square x="6" y="1"> <piece colour="white" shape="pawn" /> </square>
                <square x="7" y="1"> <piece colour="white" shape="pawn" /> </square>
                <square x="0" y="7"> <piece colour="black" shape="rook" /> </square>
                <square x="1" y="7"> <piece colour="black" shape="knight" /> </square>
                <square x="2" y="7"> <piece colour="black" shape="bishop" /> </square>
                <square x="3" y="7"> <piece colour="black" shape="queen" /> </square>
                <square x="4" y="7"> <piece colour="black" shape="king" /> </square>
                <square x="5" y="7"> <piece colour="black" shape="bishop" /> </square>
                <square x="6" y="7"> <piece colour="black" shape="knight" /> </square>
                <square x="7" y="7"> <piece colour="black" shape="rook" /> </square>
                <square x="0" y="6"> <piece colour="black" shape="pawn" /> </square>
                <square x="1" y="6"> <piece colour="black" shape="pawn" /> </square>
                <square x="2" y="6"> <piece colour="black" shape="pawn" /> </square>
                <square x="3" y="6"> <piece colour="black" shape="pawn" /> </square>
                <square x="4" y="6"> <piece colour="black" shape="pawn" /> </square>
                <square x="5" y="6"> <piece colour="black" shape="pawn" /> </square>
                <square x="6" y="6"> <piece colour="black" shape="pawn" /> </square>
                <square x="7" y="6"> <piece colour="black" shape="pawn" /> </square>
            </grid>
                8 × 8
            <goToPhase>
                <phaseRef value="A" />
                <player value="white" />
            </goToPhase>
        </phase>
        <phase>
            <phaseName>
                <phaseRef value="A" />
                <player value="black" />
                (<player value="white" />)
            </phaseName>
            <ol>
                <li>
                    <ul>
                        <li><keyword>move</keyword>
                            <piece colour="black" shape="king" />
                            <piece colour="black" shape="queen" />
                            <piece colour="black" shape="rook" />
                            <piece colour="black" shape="bishop" />
                            <piece colour="black" shape="knight" />
                            or
                            <piece colour="black" shape="pawn" />
                        </li>
                        <li>
                            <keyword>double move</keyword> with a
                            <piece colour="black" shape="pawn" />
                        </li>
                        <li>
                            <keyword>castle</keyword> with a
                            <piece colour="black" shape="rook" /> and
                            <piece colour="black" shape="king" />
                        </li>
                        <li><keyword>capture</keyword> with
                            <piece colour="black" shape="king" />
                            <piece colour="black" shape="queen" />
                            <piece colour="black" shape="rook" />
                            <piece colour="black" shape="bishop" />
                            <piece colour="black" shape="knight" />
                            or
                            <piece colour="black" shape="pawn" />
                        </li>
                        <li>
                            <keyword>capture en passant</keyword> with a
                            <piece colour="black" shape="pawn" />
                        </li>
                    </ul>
                </li>
                <li>
                    <keyword>promote</keyword>
                </li>
            </ol>
            <repeat>
                <goToPhase>
                    <phaseRef value="A" />
                    <player value="white" />
                </goToPhase>
                <goToPhase>
                    <phaseRef value="A" />
                    <player value="black" />
                </goToPhase>
            </repeat>
            <subphase use="../common-rules.xml#subphase-check" />
            <subphase use="../common-rules.xml#subphase-checkmate" />
            <subphase use="../common-rules.xml#subphase-stalemate" />
        </phase>
        <defs>
        <dl>
            <dlentry>
                <dt><keyword>move</keyword></dt>
                <dd>
                    <p>
                        Move the piece to an empty space
                    </p>
                    <ul>
                    <li>
                        Move a <piece colour="black" shape="pawn" />:
                        <space />
                        <grid use="../chess-pieces.xml#pawn" scale="0.4"/>
                    </li>
                    <li>
                        Move a <piece colour="black" shape="rook" />:
                        <space />
                        <grid use="../chess-pieces.xml#rook" scale="0.4"/>
                    </li>
                    <li>
                        Move a <piece colour="black" shape="bishop" />:
                        <space />
                        <grid use="../chess-pieces.xml#bishop" scale="0.4"/>
                    </li>
                    <li>
                        <keyword>knight jump</keyword> with a <piece colour="black" shape="knight" />:
                        <space />
                        <grid use="../chess-pieces.xml#knight" scale="0.4"/>
                    </li>
                    <li>
                        Move <piece colour="black" shape="queen" />:
                        <space />
                        <grid use="../chess-pieces.xml#queen" scale="0.4"/>
                    </li>
                    <li>
                        Move <piece colour="black" shape="king" />:
                        <space />
                        <grid use="../chess-pieces.xml#king" scale="0.4"/>
                    </li>
                    </ul>
                </dd>
            </dlentry>
            <dlentry>
                <dt><keyword>capture</keyword></dt>
                <dd>
                    Move the piece
                    to a space occupied by
                    an enemy piece, removing that piece
                    <ul>
                    <li>
                        Move
                        <piece colour="black" shape="king" />
                        <piece colour="black" shape="queen" />
                        <piece colour="black" shape="rook" />
                        <piece colour="black" shape="bishop" />
                        or
                        <piece colour="black" shape="knight" />
                        as for <keyword>move</keyword>
                    </li>
                    <li>
                        Move
                        <piece colour="black" shape="pawn" />
                        as a
                        <piece colour="black" shape="double-pawn" />:
                        <grid rows="7" columns="7" size="small" scale="0.4">
                            <square x="2" y="2">
                                <highlight value="red-square" />
                                <square x="2" y="2"> <piece colour="white" shape="pawn" /> </square>
                            </square>
                            <square x="4" y="2">
                                <highlight value="red-square" />
                                <square x="2" y="2"> <piece colour="white" shape="knight" /> </square>
                            </square>
                            <square x="3" y="3">
                                <piece colour="black" shape="pawn" />
                                <arrow x="-1" y="-1" />
                                <arrow x="1" y="-1" />
                            </square>
                        </grid>
                    </li>
                    </ul>
                </dd>
            </dlentry>

            <dlentry use="../common-rules.xml#threatened-space">
                <dd>
                <example>
                    <player value="black" />
                    <grid use="#before-promotion" scale="0.6">
                    <square x="0" y="0"> <highlight value="red-square" /> </square>
                    <square x="1" y="0"> <highlight value="red-square" /> </square>
                    <square x="2" y="0"> <highlight value="red-square" /> </square>
                    <square x="3" y="0"> <highlight value="red-square" /> </square>
                    <square x="5" y="0"> <highlight value="red-square" /> </square>
                    <square x="0" y="1"> <highlight value="red-square" /> </square>
                    <square x="3" y="1"> <highlight value="red-square" /> </square>
                    <square x="4" y="1"> <highlight value="red-square" /> </square>
                    <square x="5" y="1"> <highlight value="red-square" /> </square>
                    <square x="0" y="2"> <highlight value="red-square" /> </square>
                    <square x="1" y="2"> <highlight value="red-square" /> </square>
                    <square x="2" y="2"> <highlight value="red-square" /> </square>
                    <square x="3" y="2"> <highlight value="red-square" /> </square>
                    <square x="0" y="3"> <highlight value="red-square" /> </square>
                    <square x="2" y="3"> <highlight value="red-square" /> </square>
                    <square x="4" y="3"> <highlight value="red-square" /> </square>
                    <square x="1" y="4"> <highlight value="red-square" /> </square>
                    <square x="3" y="4"> <highlight value="red-square" /> </square>
                </grid>
                </example>
                </dd>
            </dlentry>

            <dlentry use="../common-rules.xml#check">
                <dd>
                <example>
                    <player value="black" />
                    <grid use="#start" scale="0.6">
                                <square x="3" y="0">
                                    <highlight value="red-square" />
                                    <piece colour="black" shape="pawn" />
                                </square>
                                <square x="4" y="0"> <piece colour="white" shape="rook" /> </square>
                                <square x="0" y="4"> <piece colour="black" shape="rook" /> </square>
                                <square x="5" y="0"> <highlight value="red-square" /> </square>
                                <square x="6" y="0"> <highlight value="red-square" /> </square>
                                <square x="7" y="0"> <highlight value="red-square" /> </square>
                                <square x="4" y="1"> <highlight value="red-square" /> </square>
                                <square x="4" y="2"> <highlight value="red-square" /> </square>
                                <square x="4" y="3"> <highlight value="red-square" /> </square>
                                <square x="4" y="4">
                                    <highlight value="red-square" />
                                    <piece colour="black" shape="king" />
                                </square>
                                <square x="1" y="4"> <piece colour="black" shape="knight" />
                                </square>
                </grid>
                </example>
                </dd>
            </dlentry>

            <dlentry use="../common-rules.xml#checkmate">
                <dd>
                <example>
                        <player value="black" />
                        <grid rows="5" columns="8" size="small" bottom="black-edge" left="edge" right="edge" scale="0.6">
                            <square x="1" y="3"> <piece colour="black" shape="bishop" /> </square>
                            <square x="0" y="1"> <piece colour="black" shape="pawn" /> </square>
                            <square x="3" y="2"> <piece colour="black" shape="pawn" /> </square>
                            <square x="1" y="2"> <piece colour="black" shape="pawn" /> </square>
                            <square x="2" y="3"> <piece colour="black" shape="pawn" /> </square>
                            <square x="4" y="2">
                                <highlight value="red-square" />
                                <piece colour="white" shape="pawn" />
                            </square>
                            <square x="5" y="3">
                                <highlight value="red-square" />
                                <piece colour="white" shape="queen" />
                            </square>
                            <square x="4" y="3"> <highlight value="red-square" /> </square>
                            <square x="3" y="3"> <highlight value="red-square" /> </square>
                            <square x="2" y="3"> <highlight value="red-square" /> </square>
                            <square x="5" y="4"> <highlight value="red-square" /> </square>
                            <square x="6" y="4"> <highlight value="red-square" /> </square>
                            <square x="5" y="2"> <highlight value="red-square" /> </square>
                            <square x="6" y="2"> <highlight value="red-square" /> </square>
                            <square x="5" y="1"> <highlight value="red-square" /> </square>
                            <square x="7" y="1"> <highlight value="red-square" /> </square>
                            <square x="5" y="0"> <highlight value="red-square" /> </square>
                            <square x="7" y="0"> <piece colour="white" shape="bishop" /> </square>
                            <square x="6" y="1"> <highlight value="red-square" /> </square>
                            <square x="5" y="2"> <highlight value="red-square" /> </square>
                            <square x="4" y="3"> <highlight value="red-square" /> </square>
                            <square x="3" y="4"> <highlight value="red-square" /> </square>
                            <square x="6" y="3"> <piece colour="black" shape="pawn" /> </square>
                            <square x="7" y="3"> <piece colour="black" shape="pawn" /> </square>
                            <square x="0" y="4"> <piece colour="black" shape="rook" /> </square>
                            <square x="4" y="4">
                                <highlight value="red-square" />
                                <piece colour="black" shape="king" />
                            </square>
                            <square x="5" y="4"> <piece colour="black" shape="bishop" /> </square>
                            <square x="6" y="4"> <piece colour="black" shape="knight" /> </square>
                            <square x="7" y="4"> <piece colour="black" shape="rook" /> </square>
                                <square x="2" y="2"> <piece colour="black" shape="knight" />
                                </square>
                </grid>
                </example>
                </dd>
            </dlentry>

            <dlentry use="../common-rules.xml#stalemate">
                <dd>
                <example>
                        <player value="black" />
                        <grid rows="5" columns="8" size="small" bottom="black-edge" left="edge" right="edge" scale="0.6">
                            <square x="1" y="2"> <piece colour="black" shape="pawn" /> </square>
                            <square x="1" y="1"> <piece colour="white" shape="pawn" /> </square>
                            <square x="7" y="3"> <piece colour="black" shape="pawn" /> </square>
                            <square x="7" y="2"> <piece colour="white" shape="pawn" /> </square>
                            <square x="6" y="3">
                                <highlight value="red-square" />
                                <piece colour="white" shape="queen" />
                            </square>
                            <square x="5" y="3"> <highlight value="red-square" /> </square>
                            <square x="4" y="3"> <highlight value="red-square" /> </square>
                            <square x="3" y="3"> <highlight value="red-square" /> </square>
                            <square x="2" y="3"> <highlight value="red-square" /> </square>
                            <square x="1" y="3"> <highlight value="red-square" /> </square>
                            <square x="0" y="3"> <highlight value="red-square" /> </square>
                            <square x="6" y="3"> <highlight value="red-square" /> </square>
                            <square x="7" y="3"> <highlight value="red-square" /> </square>
                            <square x="5" y="4"> <highlight value="red-square" /> </square>
                            <square x="6" y="4"> <highlight value="red-square" /> </square>
                            <square x="7" y="4"> <highlight value="red-square" /> </square>
                            <square x="5" y="2"> <highlight value="red-square" /> </square>
                            <square x="6" y="2"> <highlight value="red-square" /> </square>
                            <square x="7" y="2"> <highlight value="red-square" /> </square>
                            <square x="4" y="1"> <highlight value="red-square" /> </square>
                            <square x="6" y="1"> <highlight value="red-square" /> </square>
                            <square x="3" y="0"> <highlight value="red-square" /> </square>
                            <square x="6" y="0"> <highlight value="red-square" /> </square>
                            <square x="7" y="0">
                                <piece colour="white" shape="bishop" />
                            </square>
                            <square x="3" y="4"> <highlight value="red-square" /> </square>
                            <square x="4" y="4">
                                <piece colour="black" shape="king" />
                            </square>
                </grid>
                </example>
                </dd>
            </dlentry>

            <dlentry>
                <dt><keyword>knight jump</keyword></dt>
                <dd>
                        <piece colour="black" shape="knight" />
                        may jump over any other pieces
                        to <keyword>move</keyword>
                        or <keyword>capture</keyword>;
                        other pieces must pass through
                        only empty spaces
                </dd>
            </dlentry>
            <dlentry>
                <dt><keyword>double move</keyword></dt>
                <dd>
                        <p>
                        If a
                        <piece colour="black" shape="pawn" />
                        has not yet moved, <i>and</i> the 2 spaces forward of it
                        are empty, move it 2 spaces forward
                        </p>
                        <hide>
                        <grid rows="5" columns="8" size="small" bottom="black-edge" left="edge" right="edge" id="start">
                            <square x="1" y="3"> <piece colour="black" shape="bishop" /> </square>
                            <square x="5" y="4"> <piece colour="black" shape="bishop" /> </square>
                            <square x="6" y="4"> <piece colour="black" shape="knight" /> </square>
                            <square x="7" y="4"> <piece colour="black" shape="rook" /> </square>
                            <square x="0" y="1"> <piece colour="black" shape="pawn" /> </square>
                            <square x="1" y="2"> <piece colour="black" shape="pawn" /> </square>
                            <square x="2" y="3"> <piece colour="black" shape="pawn" /> </square>
                            <square x="5" y="3"> <piece colour="black" shape="pawn" /> </square>
                            <square x="6" y="3"> <piece colour="black" shape="pawn" /> </square>
                            <square x="7" y="3"> <piece colour="black" shape="pawn" /> </square>
                        </grid>
                        <grid rows="5" columns="8" size="small" bottom="black-edge" left="edge" right="edge" id="before-double" use="#start">
                            <square x="3" y="2"> <piece colour="black" shape="pawn" /> </square>
                            <square x="2" y="2"> <piece colour="black" shape="knight" /> </square>
                            <square x="0" y="4"> <piece colour="black" shape="rook" /> </square>
                            <square x="4" y="4"> <piece colour="black" shape="king" /> </square>
                        </grid>
                        </hide>

                        <example>
                        <player value="black" />
                        <grid use="#before-double" scale="0.6">
                            <square x="4" y="1"> <highlight value="circle" /> </square>
                            <square x="4" y="3">
                                <piece colour="black" shape="pawn" />
                                <arrow x="0" y="-2" />
                            </square>
                        </grid>
                        <legal>
                        <grid use="#before-double" scale="0.6">
                            <square x="4" y="1">
                                <piece colour="black" shape="pawn" />
                            </square>
                        </grid>
                        </legal>
                        </example>
                </dd>
            </dlentry>
            <dlentry>
                <dt><keyword>castle</keyword></dt>
                <dd>
                        <p>
                            If your
                            <piece colour="black" shape="king" />
                            has not yet moved,
                            <i>and</i>
                            is not in <keyword>check</keyword>,
                            <i>and</i> 
                            a
                            <piece colour="black" shape="rook" />
                            has also not moved,
                            <i>and</i> 
                            there are no occupied spaces in the
                            horizontal line between that
                            <piece colour="black" shape="rook" />
                            and the
                            <piece colour="black" shape="king" />,
                            <i>and</i> 
                            the
                            <piece colour="black" shape="king" />
                            space next to the
                            in the direction of the
                            <piece colour="black" shape="rook" />
                            is not a <keyword>threatened space</keyword>
                        </p>
                        <ol>
                            <li>
                                move the 
                                <piece colour="black" shape="king" />
                                2 spaces toward the
                                <piece colour="black" shape="rook" />
                            </li><li>
                                move the
                                <piece colour="black" shape="rook" />
                                to the space the
                                <piece colour="black" shape="king" />
                                just passed through (jumping over the
                                <piece colour="black" shape="king" />)
                            </li>
                        </ol>
                        <hide>
                        <grid rows="5" columns="8" size="small" bottom="black-edge" left="edge" right="edge" id="before-castle" use="#start">
                            <square x="3" y="2"> <piece colour="black" shape="pawn" /> </square>
                            <square x="2" y="2"> <piece colour="black" shape="knight" /> </square>
                            <square x="4" y="3"> <piece colour="black" shape="pawn" /> </square>
                        </grid>
                        </hide>
                        <example>
                        <player value="black" />
                        <grid use="#before-castle" scale="0.6">
                            <square x="2" y="4"> <highlight value="circle" /> </square>
                            <square x="3" y="4"> <highlight value="square" /> </square>
                            <square x="0" y="4">
                                <piece colour="black" shape="rook" />
                                <arrow> <arrow-segment x="0.1" y="-0.1" /> <arrow-segment x="2.9" y="0" /> </arrow>
                            </square>
                            <square x="4" y="4">
                                <piece colour="black" shape="king" />
                                <arrow> <arrow-segment x="-0.1" y="0.1" /> <arrow-segment x="-1.9" y="0" /> </arrow>
                            </square>
                        </grid>
                        <legal>
                            <grid use="#before-castle" scale="0.6">
                                <square x="3" y="4"> <piece colour="black" shape="rook" /> </square>
                                <square x="2" y="4"> <piece colour="black" shape="king" /> </square>
                            </grid>
                        </legal>
                        </example>
                        <example>
                        <player value="black" />
                        <grid use="#start" scale="0.6">
                            <square x="4" y="3"> <piece colour="black" shape="pawn" /> </square>
                            <square x="1" y="4">
                                <highlight value="cross" />
                                <piece colour="black" shape="knight" />
                            </square>
                            <square x="0" y="4">
                                <piece colour="black" shape="rook" />
                                <arrow> <arrow-segment x="0.1" y="-0.1" /> <arrow-segment x="2.9" y="0" /> </arrow>
                            </square>
                            <square x="4" y="4">
                                <piece colour="black" shape="king" />
                                <arrow> <arrow-segment x="-0.1" y="0.1" /> <arrow-segment x="-1.9" y="0" /> </arrow>
                            </square>
                        </grid>
                        <illegal>
                            <grid use="#start" scale="0.6">
                                <square x="4" y="3"> <piece colour="black" shape="pawn" /> </square>
                                <square x="3" y="4"> <piece colour="black" shape="rook" /> </square>
                                <square x="2" y="4"> <piece colour="black" shape="king" /> </square>
                                <square x="1" y="4">
                                    <piece colour="black" shape="knight" />
                                </square>
                            </grid>
                        </illegal>
                        </example>
                        <example>
                        <player value="black" />
                        <grid use="#start" scale="0.6">
                            <square x="4" y="3"> <piece colour="black" shape="pawn" /> </square>
                            <square x="0" y="0"> <highlight value="red-square" /> </square>
                            <square x="1" y="0"> <highlight value="red-square" /> </square>
                            <square x="2" y="0"> <highlight value="red-square" /> </square>
                            <square x="3" y="0"> <piece colour="white" shape="rook" /> </square>
                            <square x="4" y="0"> <highlight value="red-square" /> </square>
                            <square x="5" y="0"> <highlight value="red-square" /> </square>
                            <square x="6" y="0"> <highlight value="red-square" /> </square>
                            <square x="7" y="0"> <highlight value="red-square" /> </square>
                            <square x="3" y="1"> <highlight value="red-square" /> </square>
                            <square x="3" y="2"> <highlight value="red-square" /> </square>
                            <square x="3" y="3"> <highlight value="red-square" /> </square>
                            <square x="3" y="4">
                                <highlight value="red-square" />
                                <highlight value="cross" />
                            </square>
                            <square x="0" y="2">
                                <piece colour="black" shape="knight" />
                            </square>
                            <square x="0" y="4">
                                <piece colour="black" shape="rook" />
                                <arrow> <arrow-segment x="0.1" y="-0.1" /> <arrow-segment x="2.9" y="0" /> </arrow>
                            </square>
                            <square x="4" y="4">
                                <piece colour="black" shape="king" />
                                <arrow> <arrow-segment x="-0.1" y="0.1" /> <arrow-segment x="-1.9" y="0" /> </arrow>
                            </square>
                        </grid>
                        <illegal>
                            <grid use="#start" scale="0.6">
                                <square x="4" y="3"> <piece colour="black" shape="pawn" /> </square>
                                <square x="3" y="0"> <piece colour="white" shape="rook" /> </square>
                                <square x="3" y="4"> <piece colour="black" shape="rook" /> </square>
                                <square x="2" y="4"> <piece colour="black" shape="king" /> </square>
                                <square x="0" y="2">
                                    <piece colour="black" shape="knight" />
                                </square>
                            </grid>
                        </illegal>
                        </example>
                </dd>
            </dlentry>
            <dlentry>
                <dt><keyword>promote</keyword></dt>
                <dd>
                        Replace any
                        <piece colour="black" shape="pawn" />
                        which has reached the farthest row of the board
                        with your choice of
                        <piece colour="black" shape="knight" />
                        <piece colour="black" shape="bishop" />
                        <piece colour="black" shape="rook" />
                        <piece colour="black" shape="queen" />
                </dd>
                <dd>
                    <example>
                        <player value="black" />
                        <grid use="#before-promotion" scale="0.6">
                            <square x="6" y="1">
                                <piece colour="black" shape="pawn" />
                                <arrow x="0" y="-1" />
                            </square>
                            <square x="5" y="2">
                                <piece colour="black" shape="queen" />
                            </square>
                        </grid>
                        <legal>
                            <grid use="#before-promotion" scale="0.6">
                                <square x="6" y="0">
                                    <piece colour="black" shape="queen" />
                                </square>
                                <square x="5" y="2">
                                    <piece colour="black" shape="queen" />
                                </square>
                            </grid>
                        </legal>
                    </example>
                </dd>
            </dlentry>

            <dlentry>
                <dt><keyword>capture en passant</keyword></dt>
                <dd>
                    <p>
                    If an (opposing)
                        <piece colour="white" shape="pawn" />
                    has just made a <keyword>double move</keyword>
                    to a space beside a
                        <piece colour="black" shape="pawn" />,
                    move the
                        <piece colour="black" shape="pawn" />
                        to the space behind the
                        <piece colour="white" shape="pawn" />
                        and remove the
                        <piece colour="white" shape="pawn" />
                    </p>
                        <hide>
                        <grid rows="5" columns="8" size="small" top="white-edge" left="edge" right="edge" id="before-promotion">
                            <square x="0" y="3"> <piece colour="white" shape="pawn" /> </square>
                            <square x="1" y="2"> <piece colour="white" shape="pawn" /> </square>
                            <square x="3" y="2"> <piece colour="white" shape="pawn" /> </square>
                            <square x="2" y="2"> <piece colour="white" shape="knight" /> </square>
                            <square x="2" y="1"> <piece colour="white" shape="pawn" /> </square>
                            <square x="1" y="1"> <piece colour="white" shape="bishop" /> </square>
                            <square x="0" y="0"> <piece colour="white" shape="rook" /> </square>
                            <square x="4" y="0"> <piece colour="white" shape="king" /> </square>
                        </grid>
                        <grid use="before-promotion" id="before-en-passant">
                            <square x="5" y="1"> <piece colour="white" shape="pawn" /> </square>
                            <square x="6" y="1"> <piece colour="white" shape="pawn" /> </square>
                            <square x="7" y="1"> <piece colour="white" shape="pawn" /> </square>
                            <square x="5" y="0"> <piece colour="white" shape="bishop" /> </square>
                            <square x="6" y="0"> <piece colour="white" shape="knight" /> </square>
                            <square x="7" y="0"> <piece colour="white" shape="rook" /> </square>
                        </grid>
                        </hide>
                        <example>
                        <player value="black" />
                        <grid use="#before-en-passant" scale="0.6">
                            <square x="4" y="2"> <highlight value="circle" /> </square>
                            <square x="4" y="3">
                                <highlight value="red-square" />
                                <piece colour="white" shape="pawn" />
                            </square>
                            <square x="3" y="3">
                                <piece colour="black" shape="pawn" />
                                <arrow x="1" y="-1" />
                            </square>
                        </grid>
                        <legal>
                        <grid use="#before-en-passant" scale="0.6">
                            <square x="4" y="2">
                                <piece colour="black" shape="pawn" />
                            </square>
                        </grid>
                        </legal>
                        </example>
                </dd>
            </dlentry>
        </dl>
