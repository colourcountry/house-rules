<game>
    <name>Pieces used in Xiangqi</name>
    <gamebody>
        <dl>
            <dlentry>
                <dt>
                    <piece colour="black" shape="general" />
                    <piece colour="white" shape="general" />
                </dt>
                <dd>
                    General.
                </dd>
                <dd>
                    <p>
                        Moves to any abutting square.
                    </p>
                    <grid rows="7" columns="7" size="small" id="general">
                        <square x="3" y="3">
                            <arrow x="-1" y="0" />
                            <arrow x="1" y="0" />
                            <arrow x="0" y="-1" />
                            <arrow x="0" y="1" />
                            <piece colour="black" shape="general" />
                        </square>
                        <square x="3" y="2"> <highlight value="circle" /> </square>
                        <square x="4" y="3"> <highlight value="circle" /> </square>
                        <square x="3" y="4"> <highlight value="circle" /> </square>
                        <square x="2" y="3"> <highlight value="circle" /> </square>
                    </grid>
                </dd>
            </dlentry>
            <dlentry>
                <dt>
                    <piece colour="black" shape="vizier" />
                    <piece colour="white" shape="vizier" />
                </dt>
                <dd>
                    Vizier.
                </dd>
                <dd>
                    <p>
                        Moves 1 square in any diagonal
                        direction.
                    </p>
                    <grid rows="7" columns="7" size="small">
                        <square x="3" y="3">
                            <arrow x="1" y="1" />
                            <arrow x="1" y="-1" />
                            <arrow x="-1" y="-1" />
                            <arrow x="-1" y="1" />
                            <piece colour="black" shape="vizier" />
                        </square>
                        <square x="4" y="4"> <highlight value="circle" /> </square>
                        <square x="2" y="2"> <highlight value="circle" /> </square>
                        <square x="4" y="2"> <highlight value="circle" /> </square>
                        <square x="2" y="4"> <highlight value="circle" /> </square>
                    </grid>
                </dd>
            </dlentry>
            <dlentry>
                <dt>
                    <piece colour="black" shape="elephant" />
                    <piece colour="white" shape="elephant" />
                </dt>
                <dd>
                    Elephant.
                </dd>
                <dd>
                    <p>
                        Moves 2 squares diagonally from its current square.
                    </p>
                    <grid rows="7" columns="7" size="small">
                        <square x="3" y="3">
                            <arrow x="2" y="2" />
                            <arrow x="2" y="-2" />
                            <arrow x="-2" y="-2" />
                            <arrow x="-2" y="2" />
                            <piece colour="black" shape="elephant" />
                        </square>
                        <square x="5" y="5"> <highlight value="circle" /> </square>
                        <square x="5" y="1"> <highlight value="circle" /> </square>
                        <square x="1" y="5"> <highlight value="circle" /> </square>
                        <square x="1" y="1"> <highlight value="circle" /> </square>
                    </grid>
                </dd>
            </dlentry>
            <dlentry>
                <dt>
                    <piece colour="black" shape="cannon" />
                    <piece colour="white" shape="cannon" />
                </dt>
                <dd>
                    Cannon.
                </dd>
                <dd>
                    <p>
                        Moves any number of squares orthogonally from its current square,
                        provided it passes through exactly one occupied square.
                    </p>
                    <grid rows="7" columns="7" size="small">
                        <square x="3" y="3">
                            <arrow x="2" y="0" />
                            <arrow x="-3" y="0" />
                            <arrow x="0" y="-3" />
                            <arrow x="0" y="2" />
                            <piece colour="black" shape="cannon" />
                        </square>
                        <square x="4" y="3">
                            <piece colour="white" shape="rook" />
                        </square>
                        <square x="5" y="3"> <highlight value="circle" /> </square>
                        <square x="2" y="3">
                            <piece colour="white" shape="pawn" />
                        </square>
                        <square x="0" y="3"> <highlight value="circle" /> </square>
                        <square x="3" y="1">
                            <piece colour="black" shape="knight" />
                        </square>
                        <square x="3" y="0"> <highlight value="circle" /> </square>
                        <square x="3" y="4">
                            <piece colour="white" shape="pawn" />
                        </square>
                        <square x="3" y="5"> <highlight value="circle" /> </square>
                    </grid>
                </dd>
            </dlentry>
        </dl>
    </gamebody>
</game>
