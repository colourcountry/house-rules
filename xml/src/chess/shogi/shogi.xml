<game xml:lang="en">
    <name><ph xml:lang="ja">将棋</ph> Shogi</name>
    <gamebody>
        <players>
            <player value="black" />
            <player value="white" />
        </players>
        <pieces>
            <p>
                <piece count="2" shape="king" />
                <ph xml:lang="ja">王將</ph
                >/<ph xml:lang="ja">玉將</ph> king,
                <piece count="2" shape="bishop" />
                <ph xml:lang="ja">角行</ph> bishop,
                <piece count="2" shape="rook" />
                <ph xml:lang="ja">飛車</ph> rook,
                <piece count="4" shape="shogi-knight" />
                <ph xml:lang="ja">桂馬</ph> horse,
                <piece count="4" shape="lance" />
                <ph xml:lang="ja">香車</ph> lance,
                <piece count="4" shape="gold-general" />
                <ph xml:lang="ja">金将</ph> gold general,
                <piece count="4" shape="silver-general" />
                <ph xml:lang="ja">銀将</ph> silver general,
                <piece count="18" shape="pawn" />
                <ph xml:lang="ja">歩兵</ph> pawn
            </p>
            <p>
                Pieces can change owner:
                <piece shape="king" /> =
                <piece colour="black" shape="king" /> =
                <piece colour="white" shape="king" />
            </p>
            <p>
                Pieces have 2 states
            </p>
            <simpletable>
                <strow>
                    <stentry>unpromoted</stentry>
                    <stentry><piece shape="king" /></stentry>
                    <stentry><piece shape="bishop" /></stentry>
                    <stentry><piece shape="rook" /></stentry>
                    <stentry><piece shape="shogi-knight" /></stentry>
                </strow>
                <strow>
                    <stentry>promoted</stentry>
                    <stentry>(<piece shape="king" />)</stentry>
                    <stentry><piece shape="dragon-horse" /> <ph xml:lang="ja">龍馬</ph></stentry>
                    <stentry><piece shape="dragon-king" /> <ph xml:lang="ja">龍王</ph></stentry>
                    <stentry><piece shape="tokin" /> <ph xml:lang="ja">桂馬</ph></stentry>
                </strow>
                <strow>
                    <stentry>unpromoted</stentry>
                    <stentry><piece shape="lance" /></stentry>
                    <stentry><piece shape="gold-general" /></stentry>
                    <stentry><piece shape="silver-general" /></stentry>
                    <stentry><piece shape="pawn" /></stentry>
                </strow>
                <strow>
                    <stentry>promoted</stentry>
                    <stentry><piece shape="tokin" /> <ph xml:lang="ja">成香</ph></stentry>
                    <stentry>(<piece shape="gold-general" />)</stentry>
                    <stentry><piece shape="tokin" /> <ph xml:lang="ja">成銀</ph></stentry>
                    <stentry><piece shape="tokin" /> <ph xml:lang="ja">と金</ph></stentry>
                </strow>
            </simpletable>
        </pieces>
        <phase>
            <phaseName>
                <phaseRef value="Setup" />
            </phaseName>
            <p>
                <player value="white" /> <keyword>supply</keyword> : empty
            </p>
            <p>
                <player value="black" /> <keyword>supply</keyword> : empty
            </p>
             
            <hide>
                <grid id="grid" rows="9" columns="9" size="small"
                      left="edge" right="edge" bottom="white-edge" top="black-edge"/>
            </hide>
            <grid use="#grid">
                <square x="0" y="0"> <piece colour="black" shape="lance" /> <player value="black" /> </square>
                <square x="1" y="0"> <piece colour="black" shape="shogi-knight" /> </square>
                <square x="2" y="0"> <piece colour="black" shape="silver-general" /> </square>
                <square x="3" y="0"> <piece colour="black" shape="gold-general" /> </square>
                <square x="4" y="0"> <piece colour="black" shape="king" /> </square>
                <square x="5" y="0"> <piece colour="black" shape="gold-general" /> </square>
                <square x="6" y="0"> <piece colour="black" shape="silver-general" /> </square>
                <square x="7" y="0"> <piece colour="black" shape="shogi-knight" /> </square>
                <square x="8" y="0"> <piece colour="black" shape="lance" /> </square>
                <square x="1" y="1"> <piece colour="black" shape="bishop" /> </square>
                <square x="7" y="1"> <piece colour="black" shape="rook" /> </square>
                <square x="0" y="2"> <piece colour="black" shape="pawn" /> </square>
                <square x="1" y="2"> <piece colour="black" shape="pawn" /> </square>
                <square x="2" y="2"> <piece colour="black" shape="pawn" /> </square>
                <square x="3" y="2"> <piece colour="black" shape="pawn" /> </square>
                <square x="4" y="2"> <piece colour="black" shape="pawn" /> </square>
                <square x="5" y="2"> <piece colour="black" shape="pawn" /> </square>
                <square x="6" y="2"> <piece colour="black" shape="pawn" /> </square>
                <square x="7" y="2"> <piece colour="black" shape="pawn" /> </square>
                <square x="8" y="2"> <piece colour="black" shape="pawn" /> </square>

                <square x="0" y="8"> <piece colour="white" shape="lance" /> </square>
                <square x="1" y="8"> <piece colour="white" shape="shogi-knight" /> </square>
                <square x="2" y="8"> <piece colour="white" shape="silver-general" /> </square>
                <square x="3" y="8"> <piece colour="white" shape="gold-general" /> </square>
                <square x="4" y="8"> <piece colour="white" shape="king" /> </square>
                <square x="5" y="8"> <piece colour="white" shape="gold-general" /> </square>
                <square x="6" y="8"> <piece colour="white" shape="silver-general" /> </square>
                <square x="7" y="8"> <piece colour="white" shape="shogi-knight" /> </square>
                <square x="8" y="8"> <piece colour="white" shape="lance" /> </square>
                <square x="1" y="7"> <piece colour="white" shape="rook" /> </square>
                <square x="7" y="7"> <piece colour="white" shape="bishop" /> </square>
                <square x="0" y="6"> <piece colour="white" shape="pawn" /> </square>
                <square x="1" y="6"> <piece colour="white" shape="pawn" /> </square>
                <square x="2" y="6"> <piece colour="white" shape="pawn" /> </square>
                <square x="3" y="6"> <piece colour="white" shape="pawn" /> </square>
                <square x="4" y="6"> <piece colour="white" shape="pawn" /> </square>
                <square x="5" y="6"> <piece colour="white" shape="pawn" /> </square>
                <square x="6" y="6"> <piece colour="white" shape="pawn" /> </square>
                <square x="7" y="6"> <piece colour="white" shape="pawn" /> </square>
                <square x="8" y="6"> <piece colour="white" shape="pawn" /> </square>
            </grid>
                9 × 9
            <goToPhase>
                <phaseRef value="A" />
                <player value="black" />
            </goToPhase>
        </phase>
        <phase>
            <phaseName>
                <phaseRef value="A" />
                <player value="black" />
                (<player value="white" />)
            </phaseName>
            <ul>
            <li>
            <ol>
            <li>
            <keyword>move</keyword> or <keyword>capture</keyword> with one of your pieces
            </li>
            <li>
            <keyword><condition value="if-possible" /> promote</keyword>
            </li>
            </ol>
            </li>
            <li>
            <keyword>drop</keyword> a captured piece
            </li>
            </ul>
            <repeat>
                <goToPhase>
                    <phaseRef value="A" />
                    <player value="white" />
                </goToPhase>
                <goToPhase>
                    <phaseRef value="A" />
                    <player value="black" />
                </goToPhase>
            </repeat>
        <subphase use="../common-rules.xml#subphase-check" /> 
        <subphase use="../common-rules.xml#subphase-checkmate" /> 
        </phase>
        <defs>
        <dl>
            <dlentry>
                <dt><keyword>move</keyword></dt>
                <dd>
                    <p>
                        Move the piece to an empty space
                    </p>
                    <ul>
                    <li>
                        Move <piece colour="black" shape="king" />:
                        <space />
                        <grid use="../chess-pieces.xml#king" scale="0.4"/>
                    </li>
                    <li>
                        Move a <piece colour="black" shape="gold-general" />:
                        <space />
                        <grid use="../shogi-pieces.xml#gold-general" scale="0.4"/>
                    </li>
                    <li>
                        Move an unpromoted <piece colour="black" shape="silver-general" />:
                        <space />
                        <grid use="../shogi-pieces.xml#silver-general" scale="0.4"/>
                    </li>
                    <li>
                        <keyword>knight jump</keyword> with an unpromoted <piece colour="black" shape="shogi-knight" />
                        <space />
                        <grid use="../shogi-pieces.xml#shogi-knight" scale="0.4"/>
                    </li>
                    <li>
                        Move an unpromoted <piece colour="black" shape="lance" />:
                        <space />
                        <grid use="../shogi-pieces.xml#lance" scale="0.4"/>
                    </li>
                    <li>
                        Move an unpromoted <piece colour="black" shape="bishop" />:
                        <space />
                        <grid use="../chess-pieces.xml#bishop" scale="0.4"/>
                    </li>
                    <li>
                        Move an unpromoted <piece colour="black" shape="rook" />:
                        <space />
                        <grid use="../chess-pieces.xml#rook" scale="0.4"/>
                    </li>
                    <li>
                        Move an unpromoted <piece colour="black" shape="pawn" />:
                        <space />
                        <grid use="../chess-pieces.xml#pawn" scale="0.4"/>
                    </li>
                    <li>
                        Move a
                        <piece colour="black" shape="tokin" />
                        (promoted
                        <piece colour="black" shape="silver-general" /> 
                        <piece colour="black" shape="shogi-knight" /> 
                        <piece colour="black" shape="lance" /> 
                        or
                        <piece colour="black" shape="pawn" />)
                        <space />
                        <grid use="../shogi-pieces.xml#gold-general" scale="0.4"/>
                    </li>
                    <li>
                        Move a
                        <piece colour="black" shape="dragon-horse" />
                        (promoted <piece colour="black" shape="bishop" />)
                        <space />
                        <grid use="../shogi-pieces.xml#dragon-horse" scale="0.4"/>
                    </li>
                    <li>
                        Move a
                        <piece colour="black" shape="dragon-king" />
                        (promoted <piece colour="black" shape="rook" />)
                        <space />
                        <grid use="../shogi-pieces.xml#dragon-king" scale="0.4"/>
                    </li>
                    </ul>
                </dd>
            </dlentry>
            <dlentry>
                <dt><keyword>knight jump</keyword></dt>
                <dd>
                        <piece colour="black" shape="knight" />
                        may jump over any other pieces
                        to <keyword>move</keyword>
                        or <keyword>capture</keyword>;
                        other pieces must pass through
                        only empty spaces
                </dd>
            </dlentry>
            <dlentry>
                <dt><keyword>capture</keyword></dt>
                <dd>
                    <ol>
                    <li>
                        Move a piece as in <keyword>move</keyword>,
                        to a space occupied by an opponent's piece
                    </li>
                    <li>
                        Return the opponent's piece to unpromoted form
                    </li>
                    <li>
                        Remove the opponent's piece and add to your
                        <keyword>supply</keyword> as your own piece
                    </li>
                    </ol>
                </dd>
            </dlentry>
            <dlentry>
                <dt><keyword>drop</keyword></dt>
                <dd>
                    <p>
                        Take a piece from your <keyword>supply</keyword>
                        and place it
                        on a <keyword>drop space</keyword>
                        for that piece
                    </p>
                    <p>
                        The dropped piece must be placed in its unpromoted form
                    </p>
                </dd>
            </dlentry>
            <dlentry>
                <dt><keyword>drop space</keyword></dt>
                <dd>
                    For
                    <piece colour="black" shape="bishop" />
                    <piece colour="black" shape="rook" />
                    <piece colour="black" shape="gold-general" /> or
                    <piece colour="black" shape="silver-general" />,
                    any empty space
                </dd>
                <dd>For
                    <piece colour="black" shape="lance" />,
                    any empty space in the nearest 8 rows
                </dd>
                <dd>For
                    <piece colour="black" shape="shogi-knight" />,
                    any empty space in the nearest 7 rows
                </dd>
                <dd>
                    <p>For
                    <piece colour="black" shape="pawn" />,
                    any empty space in the nearest 8 rows such that
                    </p>
                    <ol>
                    <li>
                        no other
                        <piece colour="black" shape="pawn" /> is in any of the
                        spaces
                        forward or backward of the dropped
                        <piece colour="black" shape="pawn" />
                    </li>
                    <li>
                        the dropped
                        <piece colour="black" shape="pawn" />
                        does not immediately cause
                        <keyword>checkmate</keyword>
                    </li>
                    </ol>
                </dd>
            </dlentry>
            <dlentry>
                <dt><keyword>promote</keyword></dt>
                <dd>
                <ol>
                <li>
                        Promote any
                        <piece colour="black" shape="pawn" />
                        or
                        <piece colour="black" shape="lance" />
                        which ended the turn in the farthest row of the board
                </li>
                <li>
                        Promote any
                        <piece colour="black" shape="shogi-knight" />
                        which ended the turn in the farthest 2 rows of the board
                </li>
                <li>
                        <condition value="optional" /> promote any piece
                        which began or ended the turn in the farthest 3 rows of the board
                </li>
                </ol>
                </dd>
            </dlentry>
            <dlentry use="../common-rules.xml#threatened-space" />
            <dlentry use="../common-rules.xml#check" />
            <dlentry use="../common-rules.xml#checkmate" />
        </dl>
        </defs>
