<game>
    <name>Three Musketeers</name>
    <gamebody>
        <about>
            <author>Haar Hoolim</author>
            <date>1969</date>
        </about>
        <players>
            <player value="white" />
            <pieces>
                22 ×
                <piece colour="white" />
            </pieces>
        </players>
        <players>
            <player value="black" />
            <pieces>
                3 ×
                <piece colour="black" />
            </pieces>
        </players>
        <phase>
            <phaseName>
                <phaseNumber value="Setup" />
            </phaseName>
            <grid id="grid" rows="5" columns="5" size="small"
                  left="edge" right="edge" bottom="edge" top="edge"/>
            <legal>
            <grid use="grid">
                <square x="0" y="0"> <piece colour="white" /> </square>
                <square x="0" y="1"> <piece colour="white" /> </square>
                <square x="0" y="2"> <piece colour="white" /> </square>
                <square x="0" y="3"> <piece colour="white" /> </square>
                <square x="0" y="4"> <piece colour="black" /> </square>
                <square x="1" y="0"> <piece colour="white" /> </square>
                <square x="1" y="1"> <piece colour="white" /> </square>
                <square x="1" y="2"> <piece colour="white" /> </square>
                <square x="1" y="3"> <piece colour="white" /> </square>
                <square x="1" y="4"> <piece colour="white" /> </square>
                <square x="2" y="0"> <piece colour="white" /> </square>
                <square x="2" y="1"> <piece colour="white" /> </square>
                <square x="2" y="2"> <piece colour="black" /> </square>
                <square x="2" y="3"> <piece colour="white" /> </square>
                <square x="2" y="4"> <piece colour="white" /> </square>
                <square x="3" y="0"> <piece colour="white" /> </square>
                <square x="3" y="1"> <piece colour="white" /> </square>
                <square x="3" y="2"> <piece colour="white" /> </square>
                <square x="3" y="3"> <piece colour="white" /> </square>
                <square x="3" y="4"> <piece colour="white" /> </square>
                <square x="4" y="0"> <piece colour="black" /> </square>
                <square x="4" y="1"> <piece colour="white" /> </square>
                <square x="4" y="2"> <piece colour="white" /> </square>
                <square x="4" y="3"> <piece colour="white" /> </square>
                <square x="4" y="4"> <piece colour="white" /> </square>
            </grid>
            </legal>
            <goToPhase>
                <phaseNumber value="1" />
                <player value="black" />
            </goToPhase>
        </phase>
        <phase>
            <phaseName>
                <phaseNumber value="1" />
                <player value="white" />
            </phaseName>
                Move a <piece colour="white" />
                to an abutting square
            <goToPhase>
                <phaseNumber value="1" />
                <player value="black" />
            </goToPhase>
        </phase>
        <phase>
            <phaseName>
                <phaseNumber value="1" />
                <player value="black" />
            </phaseName>
                Move a <piece colour="black" />
                to an abutting square occupied by a
                <piece colour="white" />
                and capture the
                <piece colour="white" />
            <goToPhase>
                <phaseNumber value="1" />
                <player value="white" />
            </goToPhase>
        </phase>
        <subphase>
            <phaseName>
                <phaseNumber value="1" />
                <player value="black" />
            </phaseName>
                No legal moves
            <goToPhase>
                <phaseNumber value="Win" />
                <player value="black" />
            </goToPhase>            
        </subphase>
            <subphase>
                <phaseName>
                    <phaseNumber value="1" />
                    <player value="black" />
                </phaseName>
                    All <piece colour="black" />
                    are on the same rank or file
                <goToPhase>
                    <phaseNumber value="Win" />
                    <player value="white" />
                </goToPhase>            
                <example>
                        <grid use="grid">
                            <square x="0" y="2"> <piece colour="white" /> </square>
                            <square x="1" y="0"> <piece colour="black" /> </square>
                            <square x="1" y="1"> <piece colour="black" /> </square>
                            <square x="1" y="3"> <piece colour="white" /> </square>
                            <square x="2" y="3"> <piece colour="black" /> </square>
                            <square x="3" y="0"> <piece colour="white" /> </square>
                            <square x="3" y="4"> <piece colour="white" /> </square>
                            <square x="4" y="1"> <piece colour="white" /> </square>
                            <square x="4" y="2"> <piece colour="white" /> </square>
                            <square x="4" y="4"> <piece colour="white" /> </square>
                        </grid>
                    <forced>
                        <grid use="grid">
                            <square x="0" y="2"> <piece colour="white" /> </square>
                            <square x="1" y="0"> <highlight value="shade" /> <piece colour="black" /> </square>
                            <square x="1" y="1"> <highlight value="shade" /> <piece colour="black" /> </square>
                            <square x="1" y="2"> <highlight value="shade" /> </square>
                            <square x="1" y="3"> <highlight value="shade" /> <piece colour="black" /> </square>
                            <square x="1" y="4"> <highlight value="shade" /> </square>
                            <square x="3" y="0"> <piece colour="white" /> </square>
                            <square x="3" y="4"> <piece colour="white" /> </square>
                            <square x="4" y="1"> <piece colour="white" /> </square>
                            <square x="4" y="2"> <piece colour="white" /> </square>
                            <square x="4" y="4"> <piece colour="white" /> </square>
                        </grid>
                    </forced>
                    <goToPhase>
                        <phaseNumber value="Win" />
                        <player value="white" />
                    </goToPhase>            
                </example>
            </subphase>
    </gamebody>
</game>
